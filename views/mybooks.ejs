    <div class="container">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">image</th>
                    <th scope="col">title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Price</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for (let book of mybooks) {%>
                    <tr>
                        <th><img width="80" height="80" src="/uploads/<%= book.image %>"></th>
                        <td>
                            <%= book.title %>
                        </td>
                        <td>
                            <%= book.author %>
                        </td>
                        <td>$<%= book.price %>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="mybooks/delete/<%= book._id%>">Delete</button>
                                <a class="btn btn-primary" href="mybooks/update/<%= book._id%>">Update</button>


                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <%- include('parts/bottom.ejs')%>